{
  "image": "mcr.microsoft.com/azterraform:latest",

  "runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined",
		"--init",
		"--network=host"
	],

	"mounts": [ "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind" ],
  "customizations": {
    "vscode": {
      "settings": {
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.goroot": "/usr/local/go",
        "terraform.languageServer": {
          "external": true,
          "pathToBinary": "/usr/local/bin/terraform-ls"
        },
        "azure.terraform": {
          "version": "latest",
          "tflint": "latest",
          "terragrunt": "latest"
        }
      },
      "extensions": [
        "hashicorp.terraform",
        "golang.Go",
        "ms-azuretools.vscode-azureterraform",
        "ms-vscode.azurecli",
        "Github.Copilot",
        "Redhat.vscode-yaml",
        "ms-azuretools.vscode-azcli",
        "ms-azuretools.vscode-azdata"
      ]
    }
  }
}
